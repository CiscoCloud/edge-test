worker_processes	1;

events {
	worker_connections	1024;
}

http {
	include		mime.types;
	default_type	application/octet-stream;

	sendfile		on;
	keepalive_timeout	65;

	server {
		listen {{ marathon_proxy_port }} {% if marathon_do_ssl|bool %}ssl{% endif %};

{% if marathon_do_ssl|bool -%}
		ssl_certificate		/etc/nginx/ssl/nginx.cert;
		ssl_certificate_key	/etc/nginx/ssl/nginx.key;

		ssl on;
		ssl_session_cache	builtin:1000 shared:SSL:10m;
		ssl_protocols		TLSv1 TLSv1.1 TLSv1.2;
		ssl_ciphers		HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
		ssl_prefer_server_ciphers	on;

		error_page 497 https://$host:$server_port$request_uri;
{% endif %}

		location / {
			proxy_connect_timeout	600;
			proxy_send_timeout	600;
			proxy_read_timeout	600;
			send_timeout		600;

{% if marathon_do_auth|bool %}
			auth_basic on;
			auth_basic_user_file /etc/nginx/nginx-auth.conf;
{% endif %}

			proxy_pass http://{% raw %}{{ env "NGINX_PUBLIC_IP" }}{% endraw %}:{{ marathon_port }}/;
		}
	}
}
